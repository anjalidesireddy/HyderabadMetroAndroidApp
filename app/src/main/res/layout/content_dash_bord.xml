    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlpager"
                    android:layout_width="fill_parent"
                    android:background="@color/colorPrimary"

                    android:layout_height="300dp" >

                    <android.support.v4.view.ViewPager

                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="?attr/actionBarSize"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:background="#80000000">

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"

                        android:layout_height="48dp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/simpleViewFlipperrl"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="gone"
                    android:background="#ffffff"
                    android:paddingTop="?android:attr/actionBarSize">

                    <ViewFlipper
                        android:id="@+id/simpleViewFlipper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ViewFlipper>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rlpager"
                   >


                    <com.grepthor.hyderabadmetro.Helper.ExpandableHeightGridView
                        android:id="@+id/gridView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:numColumns="2"
                        android:verticalSpacing="5dp" />

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_below="@+id/gridView1"

                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">



                            <LinearLayout
                                android:id="@+id/cardambulance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/duplicates_notif"

                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                     android:layout_gravity="center"
                                    android:src="@drawable/ambulance" />



                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/cardpolice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1"

                                android:background="@drawable/duplicates_notif"

                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:src="@drawable/police" />



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/cardfirebirgade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/duplicates_notif"


                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/firetruck"
                                    />


                            </LinearLayout>


                          <LinearLayout
                              android:id="@+id/cardEergency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                              android:background="@drawable/duplicates_notif"
                              android:layout_weight="1"


                              android:gravity="center"
                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/siren" />



                            </LinearLayout>



                    </LinearLayout>

<LinearLayout
    android:id="@+id/l2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="10dp"
        android:text="Ambulance"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Police"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10dp"
        android:layout_weight="1"
        android:text="Firebrigade"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Emergency"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary" />


</LinearLayout>
